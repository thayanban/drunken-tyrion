extends layout

block content
	label(for="userId" style="font-size:16px; display:inline; position:absolute; top:50px; left: 250px;") username :
	label(for="userp" style="font-size:16px; display:inline; position:absolute; top:100px; left: 250px;") password :
	label(for="usercp" style="font-size:16px; display:inline; position:absolute; top:150px; left: 200px;") confirmPassword :
	form(method="post" action="/register")
		input(type="text" name="username" placeholder="Username" value="#{values.username}" style="display:inline; position:absolute; top:48px; left: 340px;")
		if error
			if error.username
				label(for="username" style="color:red; display:inline; position:absolute; top:50px; left: 520px;") #{error.username}
		input(type="password" name="password" placeholder="Password" id="userp" value="#{values.password}" style="display:inline; position:absolute; top:98px; left: 340px;")
		if error
			if error.password
				label(for="password" style="color:red; display:inline; position:absolute; top:100px; left: 520px;") #{error.password}
		input(type="password" name="confirmPassword" placeholder="confirmPassword" id="usercp" value="#{values.confirmPassword}" style="display:inline; position:absolute; top:148px; left: 340px;")
		if error
			if error.confirmPassword
				label(for="confirmPassword" style="color:red; display:inline; position:absolute; top:150px; left: 520px;") #{error.confirmPassword}
		button(type="submit" style="width:150px; height:30px; color:blue; display:inline; position:absolute; top:200px; left: 350px;") Register